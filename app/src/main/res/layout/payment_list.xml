<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:textStyle="bold"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/pay_txt_name_id"
    android:paddingLeft="8dp" />
    <TextView
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_txt_name_id"
        android:id="@+id/pay_txt_slot_id"/>
    <TextView
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_txt_slot_id"
        android:id="@+id/pay_txt_area_id"/>
    <TextView
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_txt_area_id"
        android:id="@+id/pay_txt_amount_id"/>
   <ImageButton
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:background="@drawable/delete"
       android:layout_marginLeft="300dp"
       android:layout_marginTop="10dp"
       android:id="@+id/btn_pay_delete"/>
</RelativeLayout>